{
  "compilerOptions": {
		"lib": ["dom", "es6", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react"
  },
	"include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js", 
    "**/*.jsx"
  ],
  "exclude": ["node_modules"],
  "extends": "./jsconfig.json"
}
